CREATE TABLE LibraryEntity(
  id TEXT PRIMARY KEY NOT NULL,
  name TEXT NOT NULL DEFAULT '',
  folders TEXT NOT NULL,
  isBookLibrary INTEGER NOT NULL DEFAULT 1
);

all:
SELECT * FROM LibraryEntity;

allIds:
SELECT id FROM LibraryEntity;

insert:
INSERT OR REPLACE INTO LibraryEntity(id, name, folders, isBookLibrary)
VALUES ?;

deleteById:
DELETE FROM LibraryEntity WHERE id = ?;

deleteAll:
DELETE FROM LibraryEntity;