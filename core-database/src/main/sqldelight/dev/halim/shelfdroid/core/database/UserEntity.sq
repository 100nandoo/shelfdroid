import dev.halim.shelfdroid.core.UserType;
import kotlin.String;
import kotlin.collections.List;

CREATE TABLE UserEntity(
  id TEXT PRIMARY KEY NOT NULL,
  username TEXT NOT NULL,
  email TEXT NOT NULL,
  type TEXT AS UserType NOT NULL,
  isActive INTEGER NOT NULL,
  lastSeen INTEGER,
  latestSession TEXT,
  permissions TEXT NOT NULL,
  librariesAccessible TEXT AS List<String> NOT NULL,
  itemTagsAccessible TEXT AS List<String> NOT NULL
);

byId:
SELECT *
FROM UserEntity
WHERE id = :id;

insert:
INSERT OR REPLACE INTO UserEntity(id, username, email, type, isActive, lastSeen, latestSession, permissions, librariesAccessible, itemTagsAccessible)
VALUES ?;

allIds:
SELECT id FROM UserEntity;

all:
SELECT * FROM UserEntity;

deleteById:
DELETE FROM UserEntity WHERE id = ?;

deleteAll:
DELETE FROM UserEntity;